<?xml version='1.0'?> 
<options>
	<tab label="General" icon="cog">
		<group>
			<fields label="Job slug">
				<option id="job-slug" type="textfield" width="100" default="job"></option>
				<description>Change single Job slug. Remember to save the permalink settings again in Settings > Permalinks</description>
			</fields>
		</group>
	</tab>
	<tab label="Jobs Listing" icon="cog">
		<group>
			<fields label="Listing Page">
				<option id="job-listing-page" type="page" width="100" default=""></option>
				<description>Assign Jobs Listing page to a page. Remember to save the permalink settings again in Settings > Permalinks</description>
			</fields>
			<fields label="Post Per Page">
				<option id="job-post-per-page" type="textfield" width="100" default="10"></option>
				<description>Number of posts per page in Job Listing page</description>
			</fields>
			<fields label="Job Footer CTA content">
				<option id="job-footer-cta-content"  type="editor" ></option>
				<description>Footer CTA Content for all Job pages</description>
			</fields>
		</group>
	</tab>
	<tab label="Single Job" icon="cog">
		<group>
			<fields label="Sidebar">
				<option id="job-sidebar" type="select" default="right" tooltip="" >
					<select value="right" text="Right"/>
					<select value="left" text="Left"/>
					<select value="hidden" text="Hidden"/>
				</option>
				<description>Select default layout for single job pages</description>
			</fields>
			<fields label="Heading Background">
				<option id="portfolio-header_img" type="media" width="100" default="" label="Background Image"></option>
			</fields>
			<fields>
				<option id="portfolio-headerbg" label="Background Color" type="color" width="100" default="444"></option>
				<option id="header_bg_repeat" type="select" default="" tooltip="" label="Background Repeat">
					<select value="" text="No repeat"/>
					<select value="repeat" text="Repeat"/>
					<select value="repeat-x" text="Repeat Horizontally"/>
					<select value="repeat-y" text="Repeat Vertically"/>
					<select value="inherit" text="Inherit"/>
				</option>
				<option id="header_bg_attachment" type="select" default="" tooltip="" label="Background Attachment" >
					<select value="" text=""/>
					<select value="fixed" text="Fixed"/>
					<select value="scroll" text="Scroll"/>
					<select value="inherit" text="Inherit"/>
				</option>
				<option id="header_bg_position" type="select" default="" label="Background Position" tooltip="" >
					<select value="" text=""/>
					<select value="left top" text="Left Top"/>
					<select value="left center" text="Left Center"/>
					<select value="left bottom" text="Left Bottom"/>
					<select value="center top" text="Center Top"/>
					<select value="center center" text="Center Center"/>
					<select value="center bottom" text="Center Bottom"/>
					<select value="right top" text="Right Top"/>
					<select value="right center" text="Right Center"/>
					<select value="right bottom" text="Right Bottom"/>
				</option>
				<option id="background-size" type="textfield" width="100" default="" label="Background Size"></option>
				<description></description>
			</fields>

		</group>
	</tab>
</options>